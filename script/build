#!/bin/sh
mkdir -p lib
node_modules/.bin/jsx --harmony --no-cache-dir ./src ./lib
mkdir -p dist
NODE_ENV=production node_modules/.bin/browserify index.js -t reactify -t browserify-shim -t envify --detect-globals false -s ReactMentions > dist/react-mentions.js
node_modules/.bin/uglifyjs dist/react-mentions.js --compress warnings=false > dist/react-mentions.min.js
echo "gzipped, the global build is:"
echo "`gzip -c dist/react-mentions.min.js | wc -c` bytes"